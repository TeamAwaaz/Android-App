<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detailed_reaction"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailedReaction"
    android:background="@drawable/background">

    <TextView
        android:text="Expected Reaction\n  Image Sequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/tv_title"
        android:textSize="20sp"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back"
        android:layout_alignTop="@+id/iv3"
        android:layout_alignRight="@+id/iv_arrow1"
        android:layout_alignEnd="@+id/iv_arrow1"
        android:id="@+id/iv_arrow3"
        android:layout_alignBottom="@+id/iv3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/case2image4"
        android:id="@+id/iv4"
        android:layout_below="@+id/iv1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_alignBottom="@+id/iv3"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_down"
        android:layout_marginTop="30dp"
        android:id="@+id/iv_arrow2"
        android:layout_below="@+id/iv2"
        android:layout_alignRight="@+id/iv2"
        android:layout_alignLeft="@+id/iv2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/case2image3"
        android:layout_marginTop="30dp"
        android:id="@+id/iv3"
        android:layout_below="@+id/iv_arrow2"
        android:layout_alignLeft="@+id/iv_arrow2"
        android:layout_alignStart="@+id/iv_arrow2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/case2image2"
        android:id="@+id/iv2"
        android:layout_toRightOf="@+id/iv_arrow1"
        android:layout_toEndOf="@+id/iv_arrow1"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="false"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_forward"
        android:id="@+id/iv_arrow1"
        android:layout_toRightOf="@+id/iv1"
        android:layout_toEndOf="@+id/iv1"
        android:layout_marginTop="60dp"
        android:layout_alignBottom="@+id/iv1"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/case2image1"
        android:layout_marginTop="50dp"
        android:id="@+id/iv1"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Reaction Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        android:id="@+id/tv_reaction2"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
